{
    "name": "ti-stats",
    "version": "1.0.0",
    "description": "A set of tools for visualizing stats during a game of TI4",
    "main": "index.js",
    "scripts": {
        "check:types": "tsc --noEmit",
        "start": "webpack serve --port 8888 --mode development",
        "test": "jest ${JEST_OPTS:-''}",
        "prepare": "cd .. && husky client/.husky"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "chart.js": "^4.4.2",
        "date-fns": "^3.6.0",
        "react": "^18.2.0",
        "react-chartjs-2": "^5.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.23.0",
        "styled-components": "^6.1.8",
        "underscore": "^1.13.6",
        "use-async-effect": "^2.2.7",
        "use-interval": "^1.4.0"
    },
    "devDependencies": {
        "@babel/core": "^7.24.4",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-numeric-separator": "^7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.22.4",
        "@babel/preset-env": "^7.24.4",
        "@babel/preset-react": "^7.24.1",
        "@babel/preset-typescript": "^7.24.1",
        "@types/jest": "^29.5.12",
        "@types/react": "^18.2.79",
        "@types/react-dom": "^18.2.25",
        "@types/underscore": "^1.11.15",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "babel-loader": "^8.1.0",
        "babel-plugin-styled-components": "^2.1.4",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prefer-object-spread": "^1.2.1",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.3.2",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.2.4",
        "tslib": "^2.6.2",
        "typescript": "^5.4.5",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-conditional-loader": "^1.0.12",
        "webpack-dev-server": "^5.0.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "moduleNameMapper": {
            "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|svg\\?url|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/fileMock.js"
        },
        "roots": [
            "<rootDir>"
        ],
        "testMatch": [
            "<rootDir>/test/**/*test.ts?(x)"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    }
}
